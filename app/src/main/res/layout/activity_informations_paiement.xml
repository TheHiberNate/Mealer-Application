<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.InformationsPaiement">

    <ImageView
        android:id="@+id/imagepaymentcard"
        android:layout_width="241dp"
        android:layout_height="181dp"
        android:layout_marginBottom="450dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/commercial_visa_card" />

    <EditText
        android:id="@+id/textpayment"
        android:layout_width="359dp"
        android:layout_height="57dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_style"
        android:hint="Enter your bank number (16 digits)"
        android:inputType="number"
        android:minHeight="48dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagepaymentcard" />

    <Button
        android:id="@+id/registerclient"
        android:layout_width="179dp"
        android:layout_height="48dp"
        android:layout_marginBottom="140dp"
        android:backgroundTint="#8BC34A"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/codeCVCC" />

    <EditText
        android:id="@+id/expirationdate"
        android:layout_width="359dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_style"
        android:hint="Enter the expiry date (MMAA)"
        android:inputType="number"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textpayment" />

    <EditText
        android:id="@+id/codeCVCC"
        android:layout_width="359dp"
        android:layout_height="53dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_style"
        android:hint="Enter the CVCC code (3 digits)"
        android:inputType="number"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expirationdate" />

</androidx.constraintlayout.widget.ConstraintLayout>