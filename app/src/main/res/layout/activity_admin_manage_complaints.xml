<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.admin_manage_complaints">

    <ListView
        android:id="@+id/complaintsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="bottom"
        android:stackFromBottom="false"></ListView>

    <TextView
        android:id="@+id/textView_NoComplaints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/currently_no_chef_complaints"
        android:visibility="invisible"
        tools:visibility="invisible"></TextView>

</RelativeLayout>