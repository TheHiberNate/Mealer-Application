<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ChefUpdateMenu">

    <ListView
        android:id="@+id/mealList"
        android:layout_width="match_parent"
        android:layout_height="587dp"
        android:layout_above="@+id/btn_backToMenuHome"
        android:layout_below="@+id/textViewSelectMealToEdit"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="0dp"
        android:scrollbarSize="20dp" />

    <TextView
        android:id="@+id/textViewSelectMealToEdit"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="20dp"
        android:text="Select a meal to edit it"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView_NoMeals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No Meals Currently in the Menu"
        android:textColor="@color/white"
        android:visibility="invisible"
        tools:visibility="invisible"></TextView>

    <TextView
        android:id="@+id/textViewYourMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewSelectMealToEdit"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="259dp"
        android:text="Your Menu:"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_backToMenuHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="0dp"
        android:text="Back Home" />
</RelativeLayout>